# Application Settings
NODE_ENV=development
PORT=5000

# Database Configuration
# Development database (local)
# MONGODB_URI=mongodb://localhost:27017/car-rental
# Production database (example, replace with your actual connection string)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/car-rental?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# File Upload
UPLOAD_PATH=./src/public/uploads

# Optional: Email Configuration (if implemented)
# EMAIL_HOST=smtp.example.com
