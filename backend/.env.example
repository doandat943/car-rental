# Application Settings
NODE_ENV=development
PORT=5000

# Database Configuration
# Development database (local)
MONGODB_URI=mongodb://localhost:27017/car-rental
# Production database (example, replace with your actual connection string)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/car-rental?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=30d

# File Upload
UPLOAD_PATH=./src/public/uploads

# Payment Configuration
# Stripe (https://dashboard.stripe.com/apikeys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# PayPal (https://developer.paypal.com/developer/applications/)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
# Optional: Only needed for server-side PayPal API calls
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# Frontend URL (for PayPal return URLs)
FRONTEND_URL=http://localhost:3000

# Optional: Email Configuration (if implemented)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@example.com
# EMAIL_PASSWORD=your-email-password

# Google Gemini AI API Key
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here 