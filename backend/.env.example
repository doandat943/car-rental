# Application Settings
NODE_ENV=development
PORT=5000

# Database Configuration
# Development database (local)
MONGODB_URI=mongodb://localhost:27017/car-rental
# Production database (example, replace with your actual connection string)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/car-rental?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=30d

# File Upload
UPLOAD_PATH=./src/public/uploads

# Optional: Email Configuration (if implemented)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@example.com
# EMAIL_PASSWORD=your-email-password

# Google Gemini AI API Key
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here 